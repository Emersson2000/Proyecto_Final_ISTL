<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Docentes"
    android:background="@mipmap/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3EDED"
        android:foreground="@color/colorBlanco"
        android:orientation="vertical"></LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/logogeneral"
        android:translationY="5dp" />

    <ScrollView
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="0dp"
        android:alwaysDrawnWithCache="true"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:fadeScrollbars="true"
        android:fillViewport="true"
        android:filterTouchesWhenObscured="true"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:scrollbarDefaultDelayBeforeFade="2000"
        android:scrollbarStyle="outsideOverlay"
        android:soundEffectsEnabled="false"
        android:theme="@style/AppBaseTheme"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:src="@drawable/imgsec2" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:src="@drawable/autoridades" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10sp"
                android:src="@drawable/software" />

            <Button
                android:id="@+id/botonCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="290dp"
                android:layout_marginBottom="10dp"
                android:background="@color/azul"
                android:text="CÁMARA"
                android:textColor="@color/colorNegro" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>